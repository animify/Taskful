.nav-inner
	.nav-logo
		img(src="/images/taskful.png", alt="")
	//- .global-search
	//- 	i.ion-ios-search
	//- 	input(type="text", placeholder="Search for anything...", autocomplete="off", spellcheck="false")
	.nav-right
		.nav-links
			a(href="/projects") Projects
			a(href="/teams") Teams
			a(href="/tasks") My Tasks
		.nav-user
			if (user)
				.user-i.dropdown-toggle
					a #{user.username.substr(0,2)}
				.dropdown.dropdown-right.dropdown-longer
					ul
						li.info_name #[a(href="/profile") #{user.fullname}]
						li.info_email #{user.email}
						li.split
						li #[a(href="/plans") Upgrade]
						li #[a(href="/people") People]
						li #[a Invites]
						li #[a(href="/account") My account]
						li.split
						li.li-red #[a(href="/logout") Sign out]
			if (!user)
				a(href="/login") Login
				a(href="/register") Register

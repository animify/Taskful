doctype html
html(lang="en")
	head
		title Create workspace
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		script(src='https://code.jquery.com/jquery-2.2.2.min.js')
		script(src='../js/tether.min.js')
		script(src='../js/drop.min.js')
		link(rel="stylesheet", type="text/css", href="../css/global.css")
		link(rel="stylesheet", type="text/css", href="../fonts/font.css")
		link(rel="stylesheet", type="text/css", href="//code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css")
	body
		.logo.logo-fixed
			img(src="/images/taskful.png")
		.center-form
			.center-form_inner
				h1 Complete your profile
				p Finish up by adding a personal avatar and the name of your Organisation for your workspace. Adding an optional work email will allow others with a similar email address to sign up to join your workspace.
				.complete
					.complete-left
						.field
							label(for="i-username") Username
							input.is--disabled#i-username(type="text", value="#{user.username}")
						.field
							label(for="i-name") Name
							input.is--disabled#i-name(type="text", value="#{user.fullname}")
						.field
							label(for="i-organisation_name") Organisation
							input#i-organisation_name(type="text", placeholder="Enter your organisation name")
						.field
							label(for="i-name") Work email
							input#i-organisation_domain(type="text", placeholder="name@company.com")
					.complete-right
						.avatar-create
							p Add a photo
				.center-form_continue
					a.btn.btn-block.btn-continue Continue
		script.
			$('.btn-continue').bind('click', function(e) {
				$.post(window.location.pathname, 'organisation=' + $('#i-organisation_name').val() + '&workemail=' + $('#i-organisation_domain').val(), function(data) {
					JSON.stringify(data);
					console.log(data);
					if (data.status == "okx`")
						window.location.replace("/account");
				});
			});
		

block footer
	.modal-overlay
		.view-close
			i.icon.ion-close-round
		.modal-overlay-inner
			#mod-assign.modal-outer.modal-med
				.modal-inner
					.modal-header
						h2 Assign to team
						p Select the team you want to assign #{project.name} to

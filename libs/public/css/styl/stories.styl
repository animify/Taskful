.stories
	padding 17px 0 10px 40px
	span(1/1)

.story
	padding 3px 0
	position relative
	span(1/1)
	&_new
		display none
	&_created
		&:before
			font-family 'Ionicons'
			content '\f400'
			absolute left -33px top 5px
			color darken(lightgrey, 10%)
			z-index 20

	&-inner
		word-break break-all
		&:before
			absolute left -27px top 0
			z-index 1
			height 100%
			width 1px
			background-color darken(lightgrey, 5%)
			content ' '
	p
		font-size 0.83rem
		color pbluelight
	&_comment
		span(1/1)
		position relative
		padding 7px 0
		&-avatar
			absolute left -42px top 15px
			z-index 20
		h6
			margin 0 0 0 0
			font-weight 600
			color cgrey
			font-size 1rem
		p
			color pbluelight
			font-size 0.93rem
			white-space pre-wrap

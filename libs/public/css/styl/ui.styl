placeholder()
		&::-webkit-input-placeholder
				{block}
		&:-moz-placeholder
				{block}
		&::-moz-placeholder
				{block}
		&:-ms-input-placeholder
				{block}

*
	box-sizing border-box
	font-smooth always
	-webkit-font-smoothing antialiased

::-webkit-scrollbar
	width 7px
	background-color lightgrey

::-webkit-scrollbar-track
	background-color transparent

::-webkit-scrollbar-thumb
	background-color rgba(0, 0, 0, 0.1)

::-webkit-scrollbar-corner
	background rgba(0, 0, 0, 0)
	border 0
	outline 0


html
	height 100%
	width 100%

body
	font-family cfont, sans-serif
	height 100%
	width 100%
	font-size 16px
	text-rendering optimizeLegibility
	-moz-osx-font-smoothing grayscale
	-webkit-font-smoothing antialiased
	text-shadow 1px 1px 1px rgba(0, 0, 0, 0.004)
	background-color #fff
	color #444
	overflow-y scroll
	overflow-x hidden
	margin 0

.bull
	margin 0 4px

p
	margin 0
	font-size 1rem

a
	text-decoration none
	color cprimary

.form-control
	span(1/1)
	margin-top 30px

.field
	width 100%
	& + .field
		margin-top 15px

label
	font-size 1rem
	color #444
	padding 6px 0
	display block

input[type="text"], input[type="password"], .ce-input
	font-family cfont, "helvetica", sans-serif
	padding 0 1rem 0 1rem
	height 3rem
	border 0
	border 1px solid #E1E5ED
	border-radius 2px
	font-size 1rem
	width 100%
	outline 0
	transition border-color 0.2s ease
	color #3c4858
	+placeholder()
		color lighten(cgr, 13%)
		font-weight 400
	& + .btn
		margin-left 8px
	&:hover
		border-color darken(#E1E5ED, 7%)
	&:focus
		border-color cprimary
.is--disabled
	background-color #F9FAFC
	color #fff
	pointer-events none
	cursor default
.input-sm
	height 2.4rem
	font-size 0.88rem
	line-height 20px
.ce-input
	padding 7px .9rem 6px 0.9rem
	line-height 30px
	&:empty:before
		content attr(placeholder)
		color #C0C1C6
.contents
	padding 0 20px

.center
	center(1220px, 33px)

.header-block
	h1
		font-weight 300
		font-size 54px
		vertical-align top
		display inline-block
		margin 0

.wrapper
	padding 84px 0 40px 0
	min-width 1220px

.empty_content
	span(1/1)
	border 1px solid lightgrey
	text-align center
	padding 60px 20px
	margin-top 32px
	h2
		font-weight 300

.group-2
	col(1/2, cycle: 2)

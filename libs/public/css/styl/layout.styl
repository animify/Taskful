.content
	padding 52px 0
	span(1/1)
.block
	span(1/1)
	position relative
	&-right
		min-height 500px
		padding 7px 0 0 272px
		display block
		vertical-align top
		span(1/1)
		h2
			font-size 1.93rem
			margin 0 0 3px 0
			font-weight normal
		p
			color cgr
	&-divider
		height 100%
		width 1px
		background-color #ededed
		absolute left 229px top -5px
	ul.block-left
		position fixed
		padding 12px 0 0 0
		margin 0
		font-size 0
		list-style none
		min-width 230px
		z-index 900
		li
			padding 5px 0
			cursor pointer
			display block
			font-size 1rem
			color cgr
			&.active
				color cprimary
				border-right 1px solid cprimary
			&:hover:not(.active)
				color cgrdark

.module-head
	h1
		font-size 2.42rem
		font-weight normal
		display inline-block
		vertical-align middle
		color #414d5d
		margin 0
	.inline-head
		display inline-block
		vertical-align middle
		float right

.new-task, .new-li
	display none

.new-task
	display none

.task-item
	span(1/1)
	border-bottom 1px solid lightgrey
	padding 2px 17px
	line-height 2rem
	background-color #fff
	position relative
	cursor text
	&.selected
		&:before
			height 1px
			width 100%
			background-color darken(#edf9ff, 6%)
			absolute top -1px left
		background-color #edf9ff
		border-color darken(#edf9ff, 6%)
	a
		font-size 0.96rem
		font-weight 400
		margin 0
		color cgrey
	.task-info
		display inline-block
		vertical-align top
		float right
		position relative
		& > *
			display inline-block
			vertical-align top
	p
		color pbluelight
		margin 0 11px 0 0
		font-size 0.9rem
	img
		vertical-align top
		max-height 23px
		max-width 235px
		border-radius 100%
		margin-top 5px

	& > *
		vertical-align top
		display inline-block
	& .toggle
		margin-right 11px
		margin-top 4px
		width 24px
		height 24px


.task_add
	& > *
		vertical-align top
		display inline-block
	.btn
		margin-left 6px

.text-preview
	border-radius 3px
	width 42px
	height 42px
	display block
	text-align center
	margin 0 auto
	span
		margin 0
		padding 0
		color #fff
		font-weight 700
		font-size 1.4rem
		line-height 42px

#tasks
	span(1/1)
	height 100%
	overflow-y auto
	padding 0
	&.top-low
		margin-top 23px

#nt
	border-radius 0px
	border 0
	border-bottom 1px solid lightgrey
	height 2.6rem
	line-height 2.6rem
	font-size 0.8575rem
	font-weight 400

.list
	span(1/1)
	background-color #fff
	border 1px solid #E5E9F0
	margin-top 12px
	border-radius 3px
	&-header
		padding 0
		margin 35px 0 -3px 0
		font-size 0
		list-style none
		li
			font-size 1rem
			display inline-block
			vertical-align top
			padding 6px 0px
			color cgr
			cursor pointer
			position relative
			transition color 0.14s ease
			&:hover
				color darken(cgr, 60%)
			& + li
				margin-left 25px
			&.active
				color cprimary
				font-weight 500
	&-blocks
		span(1/1)
		margin-top 6px
	&-block
		background-color #fff
		box-shadow 0 1px 1px 0 rgba(41,55,69,.08)
		&-body
			span(1/1)
			margin-top 16px
		col(1/3, cycle: 3)
		margin-top 26px
		border-radius 3px
		text-align center
		border 1px solid lightgrey
		padding 42px
		a
			font-size 1.37rem
			font-weight 500
			color cgrey
			overflow ellipsis
			display inline-block
			width 90%
			vertical-align top
		p
			color cgr
			font-size 0.9rem
			margin 0
		i
			font-size 1rem
			display inline-block
			vertical-align top
	&-status
		margin 0 20px 0 12px
		display inline-block
		vertical-align top
		position relative
	&-inner
		display inline-block
		vertical-align top
		.text-preview
			display inline-block
			vertical-align top
		.darken-p
			color cgrey
		a
			font-weight 600
			font-size 1.1rem
			line-height 1rem
			color cgrey
			line-height 1rem
			&:hover
				color cprimary
		p
			color #8492a6
			font-size 1rem
			line-height 1rem
			strong
				font-weight 600
				&.created_at
					display none
	&-right
		display inline-block
		vertical-align top
		float right

		& .list-options
			span
				font-size 1.3rem
				relative top 1px right 20px
				color cgr
				line-height 2.4rem
				cursor pointer
				&:hover
					color cprimary
			p
				color pbluelight
				margin-top 7px
				margin-right 12px
	& .list-actions
		margin-top 7px
		margin-right 12px
		a
			color pbluelight
			cursor pointer
		a + a
			margin-left 22px
	&-split
		span(1/1)
		margin 17px 0 0 0
		h6
			margin 0
			font-size 1.3rem
			padding 4px 0 0 0
			color cgrey
	&-item
		span(1/1)
		padding 18px 8px 19px 8px
		border-radius 3px
		background-color #fff
		box-shadow 0 1px 1px 0 rgba(41,55,69,.05)
		border-top 1px solid transparent
		.created_at
			display none
		& + .list-item
			border-color #E5E9F0

		&:hover
			p.list-contents
				display none
			p.created_at
				display block

.taskBody-view
	span(1/1)
	background-color #F9FAFC
	height 100%
	position fixed
	&_inner
		span(1/1)
		height calc(100% - 110px)
		margin-top 120px
		min-width 1080px
		max-width 1600px
		center(1600px, 30px)
	&_innerpadding
		padding 30px 0
		span(1/1)
		height 100%
	&_contain
		border 1px solid lightgrey
		box-shadow 0 1px 1px 0 rgba(41,55,69,.05)
		border-radius 3px
		height 100%
		position relative
		background-color #fff
		span(1/1)
	&_tasks
		padding 3.6rem 0 0 0
	&_options
		absolute top left
		span(1/1)
		height 3.6rem
		display block
		content ' '
		background-color #fff
		border-bottom 1px solid lightgrey
		i
			font-size 0.7175rem
			margin-left 6px
			margin-right 0
		&_left
			line-height 2.1rem
			a
				font-weight 600
				cursor pointer
				position relative
				&:after
					width 100%
					content ' '
					absolute top 23px
					left 0
					border-bottom 2px dotted cprimary
		&_right
			float right
			line-height 2.1rem
			a
				font-size 0.96rem
				color pbluelight
		&_inner
			padding 12px 20px
			& > *
				display inline-block
				vertical-align top
	&_tasks
		col(3/5, gutter: 2, cycle: 2)
	&_task
		col(2/5, cycle: 2)

.CodeMirror
	span(1/1)
	border-bottom 1px solid lightgrey
	padding 7px 0 20px 40px
	height auto !important

.CodeMirror-scroll
	span(1/1)
	overflow-x hidden !important
	overflow-y auto !important
	font-family cfont, sans-serif

.tasks-preview
	span(1/1)
	height 100%
	&-outer
		span(1/1)
	&-inner
		span(1/1)
		height calc(100% - 55px)
		padding 35px 30px 55px 30px
		overflow-y auto
		overflow-x visible
		&_title
			span(1/1)
			& > *
				display inline-block
				vertical-align top
			.toggle
				height 1.74rem
				width 1.74rem
				margin-top 6px
				margin-right 14px
			h1
				font-size 1.48rem
				font-weight 600
				margin 0
			&_options
				float right
				i
					font-size 1.6rem
					cursor pointer
					&:hover
						color cprimary
		&_description
			span(1/1)
			padding 14px 0 20px 40px
			border-bottom 1px solid lightgrey
			display none
			p
				font-size 0.88rem
				line-height 20px
		&_comment
			span(1/1)
			background-color #fff
			padding 10px 30px 10px 70px
			border-top 1px solid lightgrey
			absolute bottom left
			& > *
				display inline-block
				vertical-align top
			.ce-input
				width 100%
				display block
				height auto
				max-height 150px
				overflow-y scroll
				transition all 0.2s ease
			.user-i
				height 37px
				width 37px
				line-height 37px
				font-size 0.9rem
				absolute left 25px top 9px

.inner_hidden
	display none

.comment-editable
	position relative
	padding 7px .9rem 6px 0.9rem
	line-height 30px
	border 1px solid lightgrey
	span(1/1)
	& .input-sm
		outline 0
		display block
		overflow auto
		word-break break-all
		max-height 100%
		height 100%
		white-space: pre-line;
		&:empty:before
			content attr(placeholder)
			color #C0C1C6
	&_inner
		height 100%
	&.expanded
		.comment-editable_inner
			height calc(100% - 42px)
	&_footer
		border-top 1px solid lightgrey
		span(1/1)
		background-color #fff
		padding 5px 18px
		display none
		absolute bottom left
		i
			font-size 1.1rem
		& > *
			display inline-block
			vertical-align top
	&_left
		a + a
			margin-left 20px
		.attach-files
			i
				color cgreen
		.attach-files
			i
				color cgreen
	&_right
		float right
		.send-comment
			i
				color cgr

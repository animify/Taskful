.dropdown
	min-width 220px
	max-width 400px
	display none
	absolute left 0
	margin-top 6px
	background-color #FFF
	border-radius 3px
	border 1px solid #eaedf5
	padding 10px 0
	box-shadow 0 1px 2px 0 rgba(41,55,69,.1)
	&-right
		right 25px
		left auto
	ul
		padding 0
		margin 0
		list-style none
		display block
		li
			&.split
				height 1px
				margin 9px 0 12px 0
				span(1/1)
				background-color lightgrey
			a
				display block
				padding 5px 18px
				color cgrdark
				cursor pointer
				&:hover
					color cprimary
			&.li-red
				a:hover
					color cred

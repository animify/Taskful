.dropdown
	min-width 220px
	max-width 400px
	display none
	absolute left 0
	margin-top 2px
	background-color #FFF
	border-radius 3px
	border 1px solid #eaedf5
	padding 10px 0
	z-index 900
	box-shadow 0 1px 2px 0 rgba(41,55,69,.1)
	&-longer
		max-width 260px
		width 100%
	&-project
		left auto
		margin-left -208px
	&-right
		right 25px
		left auto
	ul
		padding 0
		margin 0
		list-style none
		display block
		li
			&.split
				height 1px
				margin 9px 0 12px 0
				span(1/1)
				background-color lightgrey
			a
				display block
				padding 5px 18px
				color cgrdark
				cursor pointer
				&:hover
					color cprimary
			&.li-yellow
				a:hover
					color cyellow
			&.li-red
				a:hover
					color cred

.drop-element
	background-color #fff
	padding 20px
	opacity 0
	transition opacity 0.2s ease
	border-radius 3px
	border 1px solid bordergrey
	&.drop-open-transitionend
		display block
	&.drop-after-open
		opacity 1

.dropPro, .dropTurbo
	width 280px
	margin-left -6px

.info_name
	a
		padding 5px 18px 0 18px !important
.info_email
	color cgr
	font-size 0.83rem
	padding 0 18px 3px 18px
	overflow ellipsis
	width 100%

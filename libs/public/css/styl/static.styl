@import 'jeet'
@import 'nib'

@import 'variables.styl'
@import 'ui.styl'
@import 'buttons.styl'
@import 'dropdown.styl'
@import 'static/nav.styl'

.container
	center(1100px, 30px)

.view
	span(1/1)
	height 100%
	&-left
		col(3/7)
		height 100%
		overflow auto
		position relative
		&_inner
			width 70%
			align(both)
			h3
				font-size 1.98rem
				font-weight 600
				margin 0 0 3px 0
			p
				color pbluelight
				font-size 1.1rem
				margin-bottom 26px
			.btn
				display block
	&-right
		col(4/7)
		height 100%
		position relative
		background-color cprimary

.fixed-logo
	fixed top 25px left 25px
	img
		max-height 25px

.module-head
	span(1/1)
	&_center
		text-align center
	&_title
		padding 44px 0 98px 0
		span(1/1)
		h3
			font-size 2.7rem
			margin 0
		p
			opacity 0.8

.module-plans
	span(1/1)
	margin-top -50px

.plan
	span(1/3)
	border 1px solid bordergrey
	border-left 0
	border-right 0
	background-color #fff
	padding 10px
	display block
	text-align center
	& + .plan
		border-left 1px solid bordergrey
	&:first-of-type
		border-radius 6px 0 0 6px
		border-left 1px solid bordergrey
	&:last-of-type
		border-radius 0 6px 6px 0
		border-right 1px solid bordergrey
	&_type
		padding 32px 0 20px 0
		h6
			margin 0
			font-size 1.8rem
		p
			color cgr
	&_price
		h2

.no-account
	absolute top 25px right 25px
	border-radius 3px
	p
		margin 0
		color #fff
		font-size 1rem !important
		a
			position relative
			color #fff !important
			margin-left 3px
			&::after
				content ' '
				width 100%
				absolute top 23px left
				border-bottom 2px dotted #fff

.submit-login
	margin-top 19px !important
	span(1/1)

.tc-text
	width 67%
	display block
	text-align center
	margin 0 auto
	absolute bottom 25px left right
	color lighten(cprimary, 80%)
	a
		color #fff !important

#plans
	.module-head
		background-color #272E3A
		h3
			color #fff
			font-weight 100
		p
			color #fff


@media screen and (max-width: 1200px)
	.view-left
		col(1/2)
	.view-right
		col(1/2)

@media screen and (max-width: 900px)
	.view-left
		col(1/1)
	.view-right
		display none

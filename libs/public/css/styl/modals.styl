.modal
	&-overlay
		fixed top left
		span(1/1)
		height 100%
		z-index 2000
		background-color #fff
		background-color rgba(255,255,255,.97)
		display none
		min-width 1100px
	&-overlay-inner
		span(1/1)
		height 100%
		transition all 0.3s cubic-bezier(0.165,0.84,0.44,1);
		visibility hidden
		transform scale(0)
		text-align center
		&.open
			opacity 1
			transform scale(1)
			visibility visible
	&-header
		h2
			font-size 2rem
			font-weight 600
			margin 0 0 8px 0
		p
			color pbluelight
			font-size 1.1rem
			margin 4px 0 26px 0
			display block
	&-body
		margin-top 10px
	&-footer
		margin-top 1.45rem
		cf()
		.group-2
			.btn
				width 100%
	&-btn
		display inline-block
		span(1/1)
		.btn
			display block
			& + .btn
				margin-left 20px
	&-inner
		padding 1.6rem 2rem
	&-outer
		align(both)
		display none
	&-list
		margin-top 10px
		span(1/1)
		text-align left
		&_item
			span(1/1)
			& + .modal-list_item
				margin-top 24px

		.text-preview, .modal-list_details, .modal-list_select
			vertical-align top
			display inline-block
		.modal-list_select
			float right
			span
				line-height 42px
				color cgr
				font-size 0.8rem
				cursor pointer
				&:hover
					color darken(cgr, 30%)
				&.active
					color cprimary
					font-weight 500
	&-list_details
		margin-left 12px
		p
			font-weight 600
			font-size 1.1rem
			margin 0
		span
			font-size 0.9rem
			color pbluelight
	&-med
		max-width 650px
		max-height 600px
		min-width 550px

.push-footer
	margin-top 18px
	span(1/1)

#tasks-select
	max-width 800px
	span(1/1)

.task-category
	col(1/3, cycle: 3, gutter: 2)
	padding 60px 30px
	border 1px solid lightgrey
	border-radius 3px
	transition all 0.2s ease
	cursor pointer
	color pbluelight
	h3
		margin 0
	&:hover
		color cgrey

.view-close
	absolute top 25px right 25px
	background-color #e1e5ed
	transition all 0.2s ease
	text-align center
	height 2.4rem
	width 2.4rem
	border-radius 50%
	cursor pointer
	z-index 2000
	&:hover
		background-color cprimary
		i
			color #fff
	i
		color darken(#EFF0F2, 36%)
		font-size 1rem
		line-height 2.5rem
		margin 0

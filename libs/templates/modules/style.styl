@import 'jeet'
@import 'nib'
@import '../../public/css/styl/variables.styl'

body
	background-color #fff
	font-family "myriad pro" , "lucida grande" , "lucida sans unicode" , "avenir next" , "helvetica neue" , "helvetica" , "helvetica" , "arial" , sans-serif;

.email
	&-outer
		background-color #fff
		border-radius 8px
		max-width 600px
		width 100%
		display block
		margin 50px auto
		text-align center
		border 2px solid bordergrey
	h2
		font-size 24px
		color cgrey
		margin 15px 0 10px
	&-inner
		padding 0px 50px 22px 50px
		p
			color pbluelight
	&-header
		padding 40px 40px 15px 40px
		text-align center
		img
			max-height 25px

small
	font-size 12px
	color darken(bordergrey, 30%)
	padding 10px 0
	float right
	a
		color cprimary
		text-decoration none

.cta-link
	text-align center
	padding 16px 80px
	display inline-block
	overflow hidden
	color #fff
	margin 14px auto
	border-radius 3px
	text-decoration none
	background-color cprimary
	white-space nowrap

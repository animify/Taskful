@import 'jeet'
@import 'nib'
@import '../../public/css/styl/variables.styl'

body
	background-color #fff
	font-family "myriad pro" , "lucida grande" , "lucida sans unicode" , "avenir next" , "helvetica neue" , "helvetica" , "helvetica" , "arial" , sans-serif;

.email
	&-outer
		background-color #fff
		border-radius 8px
		max-width 600px
		width 100%
		display block
		margin 50px auto
		text-align center
		border 2px solid bordergrey
	h2
		font-size 24px
		color cgrey
		margin 15px 0 10px
	&-inner
		padding 0px 50px 22px 50px
		p
			color pbluelight
	&-header
		padding 40px 40px 15px 40px
		text-align center
		img
			max-height 25px

small
	font-size 12px
	color darken(bordergrey, 30%)
	padding 10px 0
	float right
	a
		color cprimary
		text-decoration none

.cta-link
	text-align center
	padding 16px 80px
	display inline-block
	overflow hidden
	color #fff
	margin 14px auto
	border-radius 3px
	text-decoration none
	background-color cprimary
	white-space nowrap

.push-top
	margin 20px 0

.card-item
	span(1/1)
	padding 4px 0
	cursor pointer
	&_brand
		display inline-block
		vertical-align top
		padding 8px 0
		margin-right 22px
		margin-top 3px
		img
			max-width 45px
			pointer-events none
	&_details
		display inline-block
		vertical-align top
		h4
			margin 4px 0 -13px 0
			color cgrey
			text-align left
			font-size 18px
		p
			display inline-block
			vertical-align top
			& + p
				margin-left 30px
			span + span
				margin-left 10px
	&_options
		display inline-block
		vertical-align top
		float right
		margin-top 12px
		i
			color lighten(cgr, 13%)
			font-size 1.3rem
	& + .card-item
		border-top 1px solid bordergrey
	&:hover
		.card-item_options
			i
				color cprimary

@media screen and (max-width:600px)
	.email
		h2
			font-size 30px
	.card-item
		&_brand
			margin-right 0
			img
				max-width 42px !important
		p + p
			margin-left 15px
		h4
			display block
			text-align center
			padding 5px 0
